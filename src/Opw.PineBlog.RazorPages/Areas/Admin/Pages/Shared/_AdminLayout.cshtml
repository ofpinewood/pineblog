@{
    Layout = "_Layout";
}
@section head {
    <environment include="Development">
        <link rel="stylesheet" href="~/admin/css/admin.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/admin/css/admin.min.css" asp-append-version="true">
    </environment>
    @RenderSection("head", required: false)
}
@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <environment include="Development">
        <script src="~/admin/js/admin.min.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/admin/js/admin.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", required: false)
}

<partial name="_Header" />
<div class="pineblog-admin">
    @RenderBody()
    <partial name="_Footer" />
</div>

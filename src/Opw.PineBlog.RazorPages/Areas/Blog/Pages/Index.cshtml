@page
@model IndexModel

<div class="page-cover" style="background-image: url('/@Model.Blog.CoverUrl')">
    <h1 class="page-cover-title">
        <a href="~/">@Model.Blog.Title</a>
    </h1>
</div>

<div class="page-content">
    <div class="container">
        @foreach (var post in Model.Posts)
        {
            <partial name="_Post" model="post" />
        }
        @if (Model.Pager != null && (Model.Pager.ShowOlder || Model.Pager.ShowNewer))
        {
            <nav class="pagination row">
                <div class="item-next col-md-6">
                    @if (Model.Pager.ShowNewer)
                    {
                        <a href="?@Model.Pager.LinkToNewer" title="Newer">
                            Newer
                        </a>
                    }
                </div>
                <div class="item-prev col-md-6">
                    @if (Model.Pager.ShowOlder)
                    {
                        <a href="?@Model.Pager.LinkToOlder" title="Older">
                            Older
                        </a>
                    }
                </div>
            </nav>
        }
    </div>
</div>
